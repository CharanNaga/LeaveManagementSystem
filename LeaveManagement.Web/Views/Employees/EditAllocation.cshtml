@model LeaveAllocationEditViewModel

@{
    ViewData["Title"] = "Edit Allocation";
}

<h1>Edit Allocation for @Model.Employee.FirstName @Model.Employee.LastName</h1>

<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-action="EditAllocation">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="EmployeeId" />
            <input type="hidden" asp-for="LeaveTypeId" />

            <div class="form-group">
                <label asp-for="NumberOfDays" class="control-label"></label>
                <input asp-for="NumberOfDays" class="form-control" />
                <span asp-validation-for="NumberOfDays" class="text-danger"></span>
            </div>
            <br/>

            <div class="form-group">
                <label asp-for="Period" class="control-label"></label>
                <input asp-for="Period" class="form-control" />
                <span asp-validation-for="Period" class="text-danger"></span>
            </div>
            <br/>

            <div class="form-group">
                <a asp-action="Index" class="btn btn-dark">Back to Employees List</a> &nbsp;
                <input type="submit" value="Edit" class="btn btn-warning btn-block" /> &nbsp;
                <a asp-action="ViewAllocations" asp-route-id="@Model.EmployeeId" class="btn btn-secondary">Back to Allocation List</a> &nbsp;
            </div>
        </form>
    </div>
</div>